{
    "version": 2,
    "builds": [
        {
            "src": "src/app.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/src/app.ts"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "MONGODB_URI": "mongodb://localhost:27017/music-app",
        "JWT_SECRET": "your_jwt_secret",
        "CLIENT_URL": "http://localhost:8081"
    },
    "functions": {
        "src/app.ts": {
            "maxDuration": 30
        }
    },
    "outputDirectory": "dist"
}